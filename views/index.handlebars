<div class="col-xs-10 col-xs-offset-1">
<div class="col-xs-6">
	<h2>Burgers that are ready!</h2>

	<ul>
		{{#each burgers}}
		{{#unless this.devoured}}
		<div class="well">
			<li>
				<img class="icon" src="assets/img/burger.png" alt="burger.png" width="30px">
				<h4>{{this.name}}</h4>
				<form class="pull-right" action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">EAT ME!</button>
				</form>
			</li>
		</div>
		{{/unless}}
		{{/each}}
	</ul>
	  
	</div>

<div class="col-xs-6">
  
	<h2>Burgers that are devoured!</h2>

	<ul>
	{{#each burgers}}
	{{#if this.devoured}}
		<div class="well">
			<li>
				<img class="icon" src="assets/img/burger.png" alt="burger.png" width="30px">
				<h4>{{this.name}}</h4>
				<form class="pull-right" action="/{{this.id}}?_method=DELETE" method="POST">
					<input type="hidden" name="devoured" value="true">
				  	<button type="submit">DIGEST!</button>
				</form>
			</li>
		</div>
	{{/if}}
	{{/each}}
		</ul>
</div>

<div class="col-xs-12">
<div class="well">
	<h2>Add a Burger</h2>
	<form class="create-update-form" action="/" method="POST">

		<div class="form-group inline-thing">
			<label for="ca">Burger Name:</label>
			<input type="text" id="ca" name="name" required>
	  	</div>
	  	<button type="submit">Add Burger</button>
	</form>
</div>
</div>
</div>

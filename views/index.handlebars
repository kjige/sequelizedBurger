<div class="col-xs-6 well">
	<h2>Burgers that are ready!</h2>

	<ul>
		{{#each burgers}}
		{{#unless this.eaten}}
		<li>
			{{this.name}}

			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="eaten" value="true">
				<button type="submit">EAT ME!</button>
			</form>
		</li>
		{{/unless}}
		{{/each}}
	</ul>
	  
	</div>

<div class="col-xs-6 well">
  
	<h2>Burgers that are eaten!</h2>

	<ul>
	{{#each burgers}}
	{{#if this.eaten}}
		<li>
			{{this.name}}

			<form action="/{{this.id}}?_method=DELETE" method="POST">
				<input type="hidden" name="eaten" value="true">
			  	<button type="submit">DIGEST!</button>
			</form>
		</li>
	{{/if}}
	{{/each}}
		</ul>
</div>

<div class="col-xs-12 well">
	<h2>Add a Burger</h2>
	<form class="create-update-form" action="/" method="POST">

		<div class="form-group">
			<label for="ca">Burger Name:</label>
			<input type="text" id="ca" name="name">
	  	</div>
	  	<button type="submit">Add Burger</button>
	</form>
</div>

